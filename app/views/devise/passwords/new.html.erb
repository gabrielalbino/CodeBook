<div class = telaLogin>
  <div class="container">
      <h1 style = "font-size: 50px; text-align: center">CodeBook</h1>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.email_field :email, autofocus: true, class: 'form-control', id: 'inputEmail', placeholder: 'Email'%><br />
          </div>

          <div class="actions">
            <%= f.submit "Recuperar senha", class: 'btn btn-lg btn-secondary btn-block' %>
          </div>
        <% end %>
      <%= render "devise/shared/links" %>
    </div>
</div>
