<div class = telaLogin>
  <div class="container">
      <h1 style = "font-size: 50px; text-align: center">CodeBook</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
           <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control', placeholder: 'Email' %><br />
          <%= f.text_field :username, id: 'inputUsername', class: 'form-control', placeholder: 'Nome de usuário' %><br />
          <%= f.password_field :password, autocomplete: "off", id: 'inputPassword', class: 'form-control' , placeholder: 'Senha (' + @minimum_password_length.to_s + ' caracteres no mínimo)'%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", id: 'inputPassword', class: 'form-control' , placeholder: 'Confirme sua senha'%><br />
          <%= f.radio_button :avatar, 'icons/i1.png', :checked => true %>
          <%= image_tag("icons/i1.png", size: 70, class:"rounded-circle")%>
          <%= f.radio_button :avatar, 'icons/i2.png', :checked => true %>
          <%= image_tag("icons/i2.png", size: 70, class:"rounded-circle")%>
          <%= f.radio_button :avatar, 'icons/i3.png', :checked => true %>
          <%= image_tag("icons/i3.png", size: 70, class:"rounded-circle")%>
          <%= f.radio_button :avatar, 'icons/i4.png', :checked => true %>
          <%= image_tag("icons/i4.png", size: 70, class:"rounded-circle")%>
          <%= f.radio_button :avatar, 'icons/i5.png', :checked => true %>
          <%= image_tag("icons/i5.png", size: 70, class:"rounded-circle")%>
          <%= f.radio_button :avatar, 'icons/i6.png', :checked => true %>
          <%= image_tag("icons/i6.png", size: 70, class:"rounded-circle")%>
          <div class="actions">
            <%= f.submit "Registrar", class: 'btn btn-lg btn-light btn-block', style:'background: #b9a88e; margin-top:10px' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
  </div> <!-- /container -->
</div>
