<div class = nomePrincipal>
<h1>CodeBook</h1>
</div>

<div class = telaLogin>
  <div class="container">
      <h2 class="form-signin-heading">Registro: </h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <%= f.email_field :email, autofocus: true, id: 'inputEmail', class: 'form-control', placeholder: 'Email' %><br />
          <%= f.password_field :password, autocomplete: "off", id: 'inputPassword', class: 'form-control' , placeholder: 'Senha (' + @minimum_password_length.to_s + ' caracteres no mÃ­nimo)'%><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", id: 'inputPassword', class: 'form-control' , placeholder: 'Confirme sua senha'%><br />
          <div class="actions">
            <%= f.submit "Registrar", class: 'btn btn-lg btn-secondary btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
  </div> <!-- /container -->
</div>
