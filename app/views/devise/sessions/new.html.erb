
<div class = telaLogin>
  <div class="container">
      <h1 style = "font-size: 50px; text-align: center">CodeBook</h1>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true , class: 'form-control', id: 'inputEmail', placeholder: 'Email'%><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'inputPassword', placeholder: 'Senha' %><br />
          <% if devise_mapping.rememberable? -%>
          <label>
            <%= f.check_box :remember_me %>
            <%= f.label :'Lembrar-me' %>
          </label>
          <% end -%>

          <div class="actions">
            <%= f.submit "Entrar", class: 'btn btn-lg btn-secondary btn-block' %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
  </div> <!-- /container -->
</div>
