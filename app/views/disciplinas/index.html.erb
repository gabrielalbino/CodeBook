<div id = "wrapper">
  <!-- sidebar -->
  <div id = "sidebar-wrapper">
    <ul class = "sidebar-nav">
      <li><%= image_tag("avatar.jpeg", class:'rounded-circle') %></li>
      <li><a href = "#1">Link 1</a></li>
      <li><a href = "#2">Link 2</a></li>
      <li><%= link_to('Sair', destroy_user_session_path, method: :delete) %></li>
    </ul>
  </div>
  <!-- content -->
  <div id = "page-content-wrapper">
    <div class = "container-fluid">
      <div class = "column-lg-12">
        <a href = "" class = "btn btn-dark" id = "menu-toggle">Toggle Menu</a>
          <h1>Disciplinas</h1>

          <table>
            <thead>
              <tr>
                <th>Nome</th>
                <th>Dono</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @disciplinas.each do |disciplina| %>
                <tr>
                  <% if disciplina.user == current_user %>
                  <td><%= disciplina.nome %></td>
                  <td><%= disciplina.user.email %></td>
                  <td><%= link_to 'Show', disciplina %></td>
                  <td><%= link_to 'Edit', edit_disciplina_path(disciplina) %></td>
                  <td><%= link_to 'Destroy', disciplina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>

          <%= link_to 'New Disciplina', new_disciplina_path %>
        </div>
      </div>
    </div>
  </div>
  <script>
    $("#menu-toggle").click( function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("menuDisplayed");
    });
  </script>
